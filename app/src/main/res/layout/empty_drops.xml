<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityMain">

    <ImageView
        android:id="@+id/iv_logo_large"
        android:layout_width="@dimen/logo_large_size"
        android:layout_height="@dimen/logo_large_size"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_large"
        android:layout_margin="84dp"/>



    <Button
        android:id="@+id/bt_add_drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo_large"
        android:text="@string/str_add_drop"
        android:textSize="@dimen/button_font_size"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-thin"
        android:background="@drawable/bg_bt_add_drop"
        android:textColor="@color/add_drop_color"/>
</RelativeLayout>
